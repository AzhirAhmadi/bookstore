<h2>Edit Book</h2>
<%= form_for @book do  |f|%>
  <div class="form-group">
    <%= f.label :title %><br/>
    <%= f.text_field :title,class:"form-controll"%><br />
  </div>

  <div class="form-group">
    <%= f.label :isbn %><br/>
    <%= f.text_field :isbn,class:"form-controll"%><br />
  </div>

  <div class="form-group">
    <%= f.label :year %><br/>
    <%= f.text_field :year,class:"form-controll"%><br />
  </div>

  <div class="form-group">
    <%= f.label :cover_path %><br/>
    <%= f.text_field :cover_path,class:"form-controll"%><br />
  </div>

  <div class="form-group">
    <%= f.label :category %><br/>
    <%= f.select :category_id,
      Category.all.collect{|item| [item.name+":["+item.id.to_s+"]",item.id]},
      {:include_blank => "Select One"},
      class: "form-control" 
  %>
    <br />
    <br/>
  </div>

  <div class="form-group">
    <%= f.label :author %><br/>
    <%= f.select :author_id,
      Author.all.collect{|item| [item.first_name+" "+item.last_name,item.id]},
      {:include_blank => "Select One"},
      class: "form-control" 
  %>
    <br />
    <br/>
  </div>

  <div class="form-group">
    <%= f.label :publisher %><br/>
    <%= f.select :publisher_id,
      Publisher.all.collect{|item| [item.name,item.id]},
      {:include_blank => "Select One"},
      class: "form-control" 
  %>
    <br />
    <br/>
  </div>

  <div class="form-group">
    <%= f.label :format %><br/>
    <%= f.text_field :format,class:"form-controll"%><br />
  </div>

  <div class="form-group">
    <%= f.label :excerpt %><br/>
    <%= f.text_area :excerpt,class:"form-controll"%><br />
  </div>

  <div class="form-group">
    <%= f.label :pages %><br/>
    <%= f.number_field :pages,class:"form-controll"%><br />
  </div>

  <div class="form-group">
    <%= f.label :price %><br/>
    <%= f.text_field :price,class:"form-controll"%><br />
  </div>

  <div class="form-group">
    <%= f.label :buy %><br/>
    <%= f.text_field :buy,class:"form-controll"%><br />
  </div>

  <%= f.submit "Submit" ,class:"btn btn-primary"%>
  <%= link_to "Cancel" , books_path, class:"btn btn-default"%>
<%end%>
